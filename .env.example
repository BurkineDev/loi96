# ===========================================
# ConformLoi96 - Variables d'environnement
# ===========================================
# Copiez ce fichier vers .env.local et remplissez les valeurs

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Loi96

# ===========================================
# Clerk (Authentification)
# ===========================================
# Obtenez ces valeurs sur https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# URLs de redirection Clerk
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ===========================================
# Base de données (Prisma via Supabase)
# ===========================================
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# ===========================================
# Anthropic (Claude API pour l'analyse IA)
# ===========================================
# Obtenez votre clé sur https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key

# ===========================================
# Paddle Billing (Paiements)
# ===========================================
# Obtenez ces valeurs sur https://vendors.paddle.com/
# Mode Sandbox: https://sandbox-vendors.paddle.com/

# Environment: "sandbox" ou "production"
NEXT_PUBLIC_PADDLE_ENVIRONMENT=sandbox

# Client-side token (public)
NEXT_PUBLIC_PADDLE_CLIENT_TOKEN=test_xxx

# API Key (secret, pour les webhooks)
PADDLE_API_KEY=xxx

# Webhook Secret (pour vérifier les signatures)
PADDLE_WEBHOOK_SECRET=pdl_ntfset_xxx

# Price IDs (récupérés depuis Paddle dashboard)
NEXT_PUBLIC_PADDLE_STARTER_MONTHLY_PRICE_ID=pri_xxx
NEXT_PUBLIC_PADDLE_STARTER_YEARLY_PRICE_ID=pri_xxx
NEXT_PUBLIC_PADDLE_PRO_MONTHLY_PRICE_ID=pri_xxx
NEXT_PUBLIC_PADDLE_PRO_YEARLY_PRICE_ID=pri_xxx

# ===========================================
# Configuration Freemium
# ===========================================
FREE_CHECKS_PER_MONTH=5
NEXT_PUBLIC_FREE_CHECKS_PER_MONTH=5

# Prix (CAD)
STARTER_PRICE_MONTHLY=19
STARTER_PRICE_YEARLY=192
PRO_PRICE_MONTHLY=49
PRO_PRICE_YEARLY=480

# ===========================================
# Rate Limiting
# ===========================================
# Maximum d'analyses par minute par utilisateur
RATE_LIMIT_ANALYSES_PER_MINUTE=10

