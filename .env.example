# ===========================================
# Loi96.ca - Variables d'environnement
# ===========================================
# Copiez ce fichier vers .env.local et remplissez les valeurs

# Application
NEXT_PUBLIC_APP_URL=https://loi96.ca
NEXT_PUBLIC_APP_NAME=Loi96

# ===========================================
# Clerk (Authentification)
# ===========================================
# Obtenez ces valeurs sur https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_xxxxx
CLERK_SECRET_KEY=sk_live_xxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxx

# URLs de redirection Clerk
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ===========================================
# Base de données (Prisma via Supabase)
# ===========================================
# IMPORTANT: Utiliser le Transaction Pooler pour Vercel (IPv4)
# Format: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true
DATABASE_URL=postgresql://postgres.xxxxx:password@aws-0-ca-central-1.pooler.supabase.com:6543/postgres?pgbouncer=true
DIRECT_URL=postgresql://postgres.xxxxx:password@aws-0-ca-central-1.pooler.supabase.com:5432/postgres

# ===========================================
# Anthropic (Claude API pour l'analyse IA)
# ===========================================
# Obtenez votre clé sur https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# ===========================================
# Stripe (Paiements)
# ===========================================
# Obtenez ces valeurs sur https://dashboard.stripe.com/
STRIPE_SECRET_KEY=sk_live_xxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx

# Stripe Price IDs (créez les produits dans Stripe Dashboard)
# Starter: 19$/mois, 190$/an
STRIPE_STARTER_MONTHLY_PRICE_ID=price_xxxxx
STRIPE_STARTER_YEARLY_PRICE_ID=price_xxxxx

# Pro: 49$/mois, 490$/an
STRIPE_PRO_MONTHLY_PRICE_ID=price_xxxxx
STRIPE_PRO_YEARLY_PRICE_ID=price_xxxxx

# Stripe Webhook Secret
# Créez un webhook sur https://dashboard.stripe.com/webhooks
# URL: https://loi96.ca/api/webhooks/stripe
# Événements: checkout.session.completed, customer.subscription.*
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ===========================================
# Upstash Redis (Rate Limiting - Optionnel)
# ===========================================
# Si non configuré, le rate limiting utilise la mémoire locale
# Obtenez ces valeurs sur https://console.upstash.com/
UPSTASH_REDIS_URL=https://xxxxx.upstash.io
UPSTASH_REDIS_TOKEN=xxxxx

# ===========================================
# Configuration Freemium
# ===========================================
FREE_CHECKS_PER_MONTH=5
NEXT_PUBLIC_FREE_CHECKS_PER_MONTH=5

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_ANALYSES_PER_MINUTE=10

# ===========================================
# Optionnel: Analytics & Monitoring
# ===========================================
# NEXT_PUBLIC_POSTHOG_KEY=
# NEXT_PUBLIC_POSTHOG_HOST=
# SENTRY_DSN=
